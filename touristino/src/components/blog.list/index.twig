        <a href="./post.html" class="blog-item__image" data-publication="08 mar"><img src="./img/blog-item.png" alt=""></a>
        <div class="blog-item__info">

            {% for subitem in item %}
                <span class="blog-item__{{ subitem.infoClass }}">

                                <p>{{ subitem.text }}</p>

                    {% if subitem.subtext %}
                        <span>{{ subitem.subtext }}</span>
                    {% endif %}

                    {% if subitem.icon %}
                        <i><svg viewBox="{{ subitem.icon.box }}"><use xlink:href="#{{ subitem.icon.id }}" /></svg></i>
                    {% endif %}

                </span>
            {% endfor %}

        </div>
