{% include '../components/header/index.twig' %}

<main class="{% if contentClass %}{{ contentClass }}{% endif %}">

    <section class="section-basic">

        <div class="wrapper">

            <div class="main-basic">

                <div class="main-video">

                    <h1 class="main-video__title">Are you ready for Dubai?</h1>
                    <p class="subtitle-page">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                        incididunt ut labore et</p>

                    <div class="main-video__button">
                        <a href="#" data-action="popup" data-scope="ajax.html #video"></a>
                        {% for i in 0..5 %}
                            {% if i == 0 %}
                                <span class="play"><svg viewBox="0 0 595.021 595.021"><use xlink:href="#triangle" /></svg></span>
                            {% else %}
                                <span class="video-buttons video-buttons-{{ i }}"></span>
                            {% endif %}
                        {% endfor %}
                        <div>
                            <p><span>CHECK OUR VIDEO</span></p>
                            <p>HOW TO WORKS?</p>
                        </div>
                    </div>

                </div>

            </div>


        </div>

    </section>

    <section class="section-carousel" style="background-image:url('./img/bg/carousel-bg.png')">

        <div class="wrapper">

            <h1 class="h1" style="text-align:center;">Tours</h1>
            <p class="subtitle-tours">Your investition is only your time</p>

            <div class="carousel-wrapper" >
                <div class="carousel" id="carousel">

                    {% for item in carousel %}
                        <a href="" class="carousel-item">

                            <div class="carousel-item__image">

                                {% if item.flag %}
                                    <div class="flag flag-{{ item.flag.class }}" style="background-image:url('./img/flag-{{ item.flag.class }}.png')">
                                        <p>
                                            {{ item.flag.text }}
                                        </p>
                                    </div>
                                {% endif %}

                                <img src="./img/carousel-item-{{ loop.index }}.png" alt="" />

                                <p class="carousel-item__name">{{ item.text }}</p>

                            </div>

                            <div class="carousel-item__icon">

                                {% for subitem in item.icons %}
                                    <div>
                                        <i><img src="./img/icon/{{ subitem.nameIcon }}.png" alt=""></i>
                                        <span class="{% if loop.index == 1 %}main-price{% endif %} cy" data-cy="usd">{{ subitem.number }}</span>
                                    </div>
                                {% endfor %}

                            </div>

                        </a>
                    {% endfor %}

                </div>
            </div>

            <div class="all-tours">
                <div>
                    <a href="#" class="button-green all-tours__button">open all tours</a>
                    {% for i in 0..2 %}
                        <span class="pulse-{{ loop.index }}"></span>
                    {% endfor %}
                </div>
            </div>

        </div>

    </section>

    <section>

        <div class="wrapper">

            <div class="main-about">

                <div class="main-about__text">

                    <div class="h4">about</div>
